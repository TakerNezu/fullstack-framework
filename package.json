{
  "name": "fullstack-framework",
  "version": "1.0.0",
  "repository": "https://github.com/TakerNezu/fullstack-framework.git",
  "author": "Takeru Nezu",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "server",
    "front",
    "mock",
    "prisma",
    "aspida"
  ],
  "scripts": {
    "mock:build": "esbuild front/frontServer.ts --outfile=mock/frontServer.js --platform=node",
    "mock:dev": "yarn run mock:build && node front/frontServer.js",
    "prisma:dev": "cd prisma && yarn -s run prisma migrate dev",
    "aspida:build": "esbuild aspida/aspida.config.ts --outfile=aspida/aspida.config.js --bundle --platform=node && aspida -c aspida/aspida.config.js",
    "server:build": "esbuild server/server.ts --outfile=server/server.js --bundle --platform=node",
    "server:dev": "yarn run server:build && node server/server.js",
    "front:build": "yarn run aspida:build && esbuild front/src/index.tsx --outfile=front/public/index.js --bundle --platform=browser",
    "front:dev": "yarn run front:build && yarn run mock:dev"
  },
  "devDependencies": {
    "dotenv": "^10.0.0",
    "esbuild": "^0.14.2",
    "msw": "^0.36.3",
    "typescript": "^4.5.3"
  },
  "msw": {
    "workerDirectory": "front/public"
  }
}
